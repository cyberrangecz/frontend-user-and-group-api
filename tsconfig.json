{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "kypo-user-and-group-api": [
                "dist/user-and-group-api/user-and-group-api",
                "dist/user-and-group-api"
            ]
        },
        "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
